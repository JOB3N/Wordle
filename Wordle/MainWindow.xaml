<Window x:Class="Wordle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wordle"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="459">
    <Grid Background="#FF844040">
        <ComboBox x:Name="Category" HorizontalAlignment="Left" Height="29" Margin="10,55,0,0" VerticalAlignment="Top" Width="390" FontSize="18" SelectedIndex="0">
            <ComboBoxItem Content="Животные"/>
            <ComboBoxItem Content="Фрукты"/>
            <ComboBoxItem Content="Глаголы"/>
            <ComboBoxItem Content="Цвета"/>
        </ComboBox>
        <RadioButton Name="radioButton1"  Content="" HorizontalAlignment="Left" Margin="10,155,0,0" VerticalAlignment="Top" FontSize="20" Foreground="White" Height="29" Cursor="Hand"/>
        <RadioButton Name="radioButton2"  Content="" HorizontalAlignment="Left" Margin="248,155,0,0" VerticalAlignment="Top" FontSize="20" Foreground="White" Height="29" Cursor="Hand"/>
        <RadioButton Name="radioButton3"  Content="" HorizontalAlignment="Left" Margin="10,199,0,0" VerticalAlignment="Top" FontSize="20" Foreground="White" Height="29" Cursor="Hand"/>
        <RadioButton x:Name="radioButton4"  Content="" HorizontalAlignment="Left" Margin="248,199,0,0" VerticalAlignment="Top" FontSize="20" Foreground="White" Height="29" Cursor="Hand"/>
        <Button Content="Проверка перевода" HorizontalAlignment="Left" Height="40" Margin="10,314,0,0" VerticalAlignment="Top" Width="180" Click="buttonCheck_Click" Background="#00DDDDDD" FontSize="18" 
                BorderBrush="White" Foreground="White"/>
        <Label Content="Категория" HorizontalAlignment="Left" Height="50" Margin="10,5,0,0" VerticalAlignment="Top" Width="238" Foreground="White" FontSize="24"/>
        <Button Content="Добавить слово" HorizontalAlignment="Left" Height="40" Margin="10,359,0,0" VerticalAlignment="Top" Width="159" Click="AddWordButton" Background="#00DDDDDD" FontSize="18" 
            BorderBrush="White" Foreground="White"/>
        <TextBlock x:Name="OrigWord" HorizontalAlignment="Left" Height="33" Margin="10,106,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="159" Foreground="White" FontSize="20"/>
        <TextBlock x:Name="Statistic" HorizontalAlignment="Left" Height="76" Margin="10,233,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="419" Background="#00DDDDDD" FontSize="18" Foreground="White"/>
    </Grid>
</Window>
