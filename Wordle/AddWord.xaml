<Window x:Class="Wordle.AddWord"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wordle"
        mc:Ignorable="d"
        Title="AddWord" Height="450" Width="410">
    <Grid Background="#FF844040">
        <ComboBox x:Name="Category" HorizontalAlignment="Center" Height="29" Margin="0,228,0,0" VerticalAlignment="Top" Width="390" FontSize="20">
            <ComboBoxItem Content="Животные"/>
            <ComboBoxItem Content="Фрукты"/>
            <ComboBoxItem Content="Глаголы"/>
            <ComboBoxItem Content="Цвета"/>
        </ComboBox>
        <TextBox x:Name="OrigWord" HorizontalAlignment="Left" Height="29" Margin="7,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="393" FontSize="20"/>
        <TextBox x:Name="TranslationWord" HorizontalAlignment="Left" Height="29" Margin="10,140,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="393" FontSize="20"/>
        <Label Content="Слово" HorizontalAlignment="Left" Height="35" Margin="7,10,0,0" VerticalAlignment="Top" Width="163" FontSize="20" Foreground="White"/>
        <Label Content="Анлийский перевод слова" HorizontalAlignment="Left" Height="38" Margin="7,97,0,0" VerticalAlignment="Top" Width="383" FontSize="20" Foreground="White"/>
        <Label Content="Категория" HorizontalAlignment="Left" Height="38" Margin="7,185,0,0" VerticalAlignment="Top" Width="383" FontSize="20" Foreground="White"/>
        <Button Content="Добавить слово" HorizontalAlignment="Center" Height="40" Margin="0,339,0,0" VerticalAlignment="Top" Width="200" Background="#00DDDDDD" FontSize="18" 
                BorderBrush="White" Foreground="White" Click="Button_Click"/>
        <Button Content="Сохранить список слов" HorizontalAlignment="Center" Height="40" Margin="0,384,0,0" VerticalAlignment="Top" Width="200" Background="#00DDDDDD" FontSize="18" 
            BorderBrush="White" Foreground="White" Click="Button_Click_1"/>
        <TextBlock x:Name="InfoText" HorizontalAlignment="Center" Height="42" Margin="0,281,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="390" Foreground="White" FontSize="18"/>

    </Grid>
</Window>
